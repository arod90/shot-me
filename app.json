{
  "expo": {
    "name": "shot-me",
    "slug": "shot-me",
    "version": "1.0.7",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shotme",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shotme.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library for profile pictures",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save photos",
        "UIBackgroundModes": ["remote-notification"],
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes and take profile pictures",
        "NSMicrophoneUsageDescription": "This app needs microphone access for video features",
        "CFBundleDevelopmentRegion": "en",
        "UIRequiresFullScreen": true,
        "ITSAppUsesNonExemptEncryption": false,
        "LSApplicationQueriesSchemes": ["shotme"]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.shotme.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "plugins": [
      "expo-notifications",
      "expo-image-picker",
      "expo-file-system",
      [
        "expo-updates",
        {
          "username": "jrodri2709"
        }
      ],
      "expo-font"
    ],
    "owner": "jrodri2709",
    "extra": {
      "eas": {
        "projectId": "58532bbb-e22e-4528-ad5a-9e17409e2c37"
      }
    }
  }
}
